<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="@dimen/cardview_radius"
    card_view:cardElevation="@dimen/cardview_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/id_txt_item_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dell - 5421"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/id_img_ic_date"
            android:layout_width="@dimen/size_circle"
            android:layout_height="@dimen/size_circle"
            android:layout_below="@+id/id_txt_item_registro"
            android:src="@drawable/ic_date_range" />

        <TextView
            android:id="@+id/id_txt_item_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_10dp"
            android:layout_below="@+id/id_txt_item_registro"
            android:layout_toRightOf="@id/id_img_ic_date"
            android:text="2018-01-01 14:12:15" />

        <ImageView
            android:id="@+id/id_img_ic_date_fin"
            android:layout_width="@dimen/size_circle"
            android:layout_height="@dimen/size_circle"
            android:layout_below="@+id/id_img_ic_date"
            android:src="@drawable/ic_date_range" />

        <TextView
            android:id="@+id/id_txt_item_fecha_fin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_10dp"
            android:layout_below="@+id/id_txt_item_fecha"
            android:layout_toRightOf="@id/id_img_ic_date_fin"
            android:text="2018-01-01 14:12:15" />

        <ImageView
            android:id="@+id/id_img_item_estado_enviado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_circle_green" />

        <ImageView
            android:id="@+id/id_img_item_estado_pendiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_circle_red" />
    </RelativeLayout>
</android.support.v7.widget.CardView>